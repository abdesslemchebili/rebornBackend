# REBORN Backend - Environment Configuration
# Copy this file to .env and fill in your values

# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# MongoDB
MONGODB_URI=mongodb://localhost:27017/reborn

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRES_IN=150m
JWT_REFRESH_EXPIRES_IN=70d


# Logging
LOG_LEVEL=info

# CORS: comma-separated origins for web (e.g. https://app.reborn.tn). For mobile-only, leave as-is; requests with no Origin are allowed by default.
CORS_ORIGIN=http://localhost:19006
# Set to false to reject requests that send no Origin (default true for native mobile)
# CORS_ALLOW_NO_ORIGIN=true

# Optional: Swagger
SWAGGER_ENABLED=true
